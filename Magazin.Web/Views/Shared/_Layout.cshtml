<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body style="background-color: #f6f6f6">
    <nav class="navbar navbar-expand-lg  navbar-dark bg-dark" ">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse " id="navbarSupportedContent">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item mr-2">
                    <img src="img/time-icon-gray.png" align="center">
                </li>
                <li class="nav-item mr-3">
                    <p class="txtForNavBar "> Пн-Пт 11:00 - 20:00  Сб: 13:00 - 20:00</p>
                </li>
                <li class="nav-item mr-2">
                    <img src="img/time-icon-gray.png">
                </li>
                <li class="nav-item mr-5">
                    <p class="txtForNavBar"> +7 (495) 989-20-11</p>
                </li>
                <li class="nav-item mr-2">
                    <img src="img/time-icon-gray.png">
                </li>
                <li class="nav-item mr-3">
                    <p class="txtForNavBarWhite">Инфо</p>
                </li>
                <li class="nav-item mr-2">
                    <img src="img/time-icon-gray.png">
                </li>
                <li class="nav-item mr-3">
                    <p class="txtForNavBarWhite">Оплата</p>
                </li>
                <li class="nav-item mr-2">
                    <img src="img/shape.png">
                </li>
                <li class="nav-item mr-3">
                    <p class="txtForNavBarWhite">Доставка</p>
                </li>
                <li class="nav-item">
                    <button type="button" class="btn btn-success">Вход</button>
                </li>
            </ul>

        </div>
    </nav>
    <div class="row panel">
        <div id="categories" class="col-xs-3">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-xs-8">
            @RenderBody()
        </div>
    </div>
</body>
</html>